<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_weight="0"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Top News"
                android:textAlignment="textStart"
                android:textSize="8dp"
                android:textColor="@color/colorBlanc"
                android:background="@drawable/rounded_category"/>

            <TextView
                android:id="@+id/title_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="2020 census extended due to low participation, COVID-19"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:tint="@color/colorGrey"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/time_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="avril 03, 2020"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:tint="@color/colorGrey"
                    app:srcCompat="@drawable/ic_comment_black_24dp"
                    />

                <TextView
                    android:id="@+id/nbr_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="16"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>